# Database
DATABASE_URL=sqlite+aiosqlite:///../data/clipset.db

# Security
SECRET_KEY=change-me-to-a-random-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Initial Admin User (created on first run)
INITIAL_ADMIN_EMAIL=admin@clipset.local
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=admin123

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173

# Frontend (for generating invitation links)
FRONTEND_BASE_URL=http://localhost:5173

# Storage Paths
VIDEO_STORAGE_PATH=../data/uploads/videos
THUMBNAIL_STORAGE_PATH=../data/uploads/thumbnails
TEMP_STORAGE_PATH=../data/uploads/temp

# Upload Limits (bytes)
MAX_FILE_SIZE_BYTES=2147483648
WEEKLY_UPLOAD_LIMIT_BYTES=4294967296

# Accepted Video Formats (comma-separated)
ACCEPTED_VIDEO_FORMATS=mp4,mov,avi,mkv,webm,hevc,h265

# FFmpeg
FFMPEG_PATH=ffmpeg

# Video Processing
VIDEO_PROCESSING_TIMEOUT=1800

# GPU Transcoding Settings
# Enable/disable NVIDIA GPU acceleration for video transcoding
USE_GPU_TRANSCODING=false
# GPU device ID to use (0 = first GPU)
GPU_DEVICE_ID=0
# NVENC preset: p1 (fastest) to p7 (slowest, best quality)
# p3-p4: Balanced (recommended for most use cases)
# p5-p6: Better quality, slower
# p7: Best quality, slowest
NVENC_PRESET=p4
# Constant quality target: 0 (best) to 51 (worst)
# 16-18: Near-visually-lossless (recommended for gaming/sports/camera footage)
# 18-20: High quality (good for most content)
# 20-23: Good quality (smaller files)
# 23-28: Acceptable quality (smallest files)
NVENC_CQ=18
# Rate control mode: vbr (recommended), cbr, constqp
# vbr: Variable bitrate with quality targeting (best for streaming/web)
# cbr: Constant bitrate (consistent bandwidth)
# constqp: Constant quantization (simplest)
NVENC_RATE_CONTROL=vbr
# Maximum bitrate cap (e.g., 8M = 8 Mbps, 10M = 10 Mbps)
# Prevents excessive bitrate spikes and file size bloat
NVENC_MAX_BITRATE=8M
# Buffer size for bitrate smoothing (typically 2x maxrate)
# Helps maintain consistent bitrate distribution over time
NVENC_BUFFER_SIZE=16M

# Quota Reset Schedule
QUOTA_RESET_DAY=0
QUOTA_RESET_HOUR=0
QUOTA_RESET_TIMEZONE=UTC
